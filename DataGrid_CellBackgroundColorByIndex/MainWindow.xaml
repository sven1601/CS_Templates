<Window x:Class="DataGrid_CellBackgroundColorByIndex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataGrid_CellBackgroundColorByIndex"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>        
        <DataGrid x:Name="mainGrid" Grid.Row="1" Margin="5,5,5,5" IsReadOnly="True" CanUserAddRows="False" VirtualizingPanel.IsVirtualizing="False"/>
        <Button Name="btnColorCells" Content="Color Cells" Grid.Row="0" Margin="5,5,5,5" HorizontalAlignment="Left" Click="btnColorCells_Click"/>
    </Grid>
</Window>
